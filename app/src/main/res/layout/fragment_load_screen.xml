<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <include
                android:id="@+id/tolbar1"
                layout="@layout/toolbar_load_view"/>

        <android.support.constraint.ConstraintLayout
                android:layout_below="@id/tolbar1"
                android:layout_width="match_parent"
                android:background="@color/transparent_gray"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/slika"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/krugce"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="14.7dp"
                    android:layout_marginTop="26.7dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:text="Name of Load"
                    android:textColor="@color/White"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/slika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/slika"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/name_load"/>

            <ImageView
                    android:layout_width="22.7dp"
                    android:layout_height="21.7dp"
                    android:background="@drawable/icons_8_speech_bubble_filled"
                    android:layout_gravity="center"
                    app:layout_constraintStart_toEndOf="@+id/name_load"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="63dp"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView5"/>

            <ImageView
                    android:layout_width="22.7dp"
                    android:layout_height="22dp"
                    android:background="@drawable/notification_info"
                    android:layout_gravity="center"
                    android:layout_marginTop="63dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"/>
        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>