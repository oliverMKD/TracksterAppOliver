<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <include
                android:id="@+id/tolbar1"
                layout="@layout/toolbar_load_view"/>


        <LinearLayout
                android:layout_below="@id/tolbar1"
                android:layout_width="match_parent"
                android:background="@color/transparent_gray"
                android:orientation="horizontal"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/slika"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/load"
            />

            <TextView
                    android:text="Name of Load"
                    android:textColor="@color/White"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/slika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/com_facebook_close"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"

            />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fcbtn"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="20dp"

            />
        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>