<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/transparent_gray"
        android:layout_height="wrap_content"


>


    <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date - Day/Month/Year"
            android:textColor="@color/White"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/routeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Name Goes Here"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data"
           />
    <TextView
            android:id="@+id/dolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@color/Gold"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/routeName"/>
    <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4,990.00"
            android:textColor="@color/Gold"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/dolar"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/routeName"/>

    <TextView
        android:id="@+id/znak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD  / "
        android:textColor="@color/Gold"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="53dp"
        app:layout_constraintStart_toEndOf="@+id/value"
        app:layout_constraintTop_toBottomOf="@+id/routeName"
        android:layout_marginStart="9dp"/>

    <TextView
            android:id="@+id/miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,480 "
            android:textColor="@color/Gold"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="53dp"
            app:layout_constraintStart_toEndOf="@+id/znak"
            app:layout_constraintTop_toBottomOf="@+id/routeName"
            android:layout_marginStart="6dp"/>


    <TextView
            android:id="@+id/milji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="miles "
            android:textColor="@color/Gold"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="53dp"
            app:layout_constraintTop_toBottomOf="@+id/routeName"
            app:layout_constraintStart_toEndOf="@+id/miles"
            android:layout_marginStart="6dp"/>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/com_facebook_close"
               app:layout_constraintTop_toBottomOf="@+id/routeName"
               app:layout_constraintStart_toEndOf="@+id/milji"
               android:layout_marginStart="96dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="18dp"
               android:id="@+id/hisbtn"
               app:layout_constraintHorizontal_bias="0.428"/>

</android.support.constraint.ConstraintLayout>