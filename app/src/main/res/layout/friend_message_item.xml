<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:targetApi="LOLLIPOP">

    <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorMessageDate"
            android:textSize="12.3sp"/>


    <TextView
            android:id="@+id/received_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="John"

            android:layout_below="@id/date_text_view"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
            android:id="@+id/message_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/received_name"
            android:layout_marginBottom="@dimen/message_relative_layout_margin"
            android:layout_marginEnd="@dimen/message_relative_layout_marginStartEnd"
            android:layout_marginStart="@dimen/message_relative_layout_margin"
            android:layout_marginTop="@dimen/message_relative_layout_margin"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_toEndOf="@id/avatar_image_view"
    >


        <TextView
                android:id="@+id/message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:letterSpacing="0.01"
                android:minWidth="@dimen/my_message_text_view_min_width"
                android:padding="@dimen/message_text_view_padding"
                android:textColor="@android:color/black"
                android:textSize="16.7sp"/>

        <ImageView
                android:id="@+id/message_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/message_image_view_padding"
                android:visibility="gone"/>

        <Button
                android:id="@+id/ivPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:text="@string/playRecord"
                android:textColor="@color/transparent"
                android:visibility="gone"
                android:layout_margin="8dp"

                />

        <SeekBar
                android:id="@+id/sbProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_toRightOf="@id/ivPlayPause"/>

        <!--<ImageView-->
        <!--android:id="@+id/message_video_image_view"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBottom="@id/message_image_view"-->
        <!--android:layout_alignEnd="@id/message_image_view"-->
        <!--android:layout_alignStart="@id/message_image_view"-->
        <!--android:layout_alignTop="@id/message_image_view"-->
        <!--android:visibility="gone"-->
        <!--app:srcCompat="@drawable/ic_video" />-->

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/time_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_relative_layout"
            android:layout_marginStart="@dimen/message_relative_layout_margin">


        <TextView
                android:id="@+id/time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="12:00"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/time_text_view_margin_right"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/time_try_again_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>