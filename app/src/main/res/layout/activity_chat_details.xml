<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_color"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"

    tools:context=".chat.ChatDetailsActivity"
    tools:targetApi="LOLLIPOP">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linija"
        android:layout_below="@id/toolbar"
        android:divider="@null"
        android:dividerHeight="@dimen/list_view_divider_height"
        android:listSelector="@android:color/transparent"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin" />

    <View
            android:id="@+id/linija"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dfdfdf"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_above="@id/send_message_relative_layout"
                       />

    <LinearLayout
            android:id="@+id/send_message_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:minHeight="48dp"
            android:background="#ffffff"
            >



        <ImageView
                android:id="@+id/smile"
                android:background="@drawable/smile"
                android:clickable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:gravity="top"
                android:layout_gravity="center_vertical"/>


        <EditText
                android:id="@+id/send_message_edit_text"
                android:hint="New Message"
                android:background="@drawable/chat_form"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="7dp"
                android:maxLines="6"/>

        <ImageView
                android:id="@+id/img_selector_image_view"
                android:background="@drawable/spaser"
                android:clickable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:gravity="top"
                android:layout_gravity="center_vertical"/>

        <ImageView
                android:id="@+id/cam"
                android:background="@drawable/cam"
                android:clickable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:gravity="top"
                android:layout_gravity="center_vertical"/>
        <ImageView
                android:id="@+id/button_send_msg"
                android:background="@drawable/mic"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
        />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/fragment_media_details"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@id/toolbar"
                 android:layout_marginTop="0dp"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressDialogStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout >
