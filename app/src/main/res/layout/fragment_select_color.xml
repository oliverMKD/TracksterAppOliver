<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"

        android:background="@color/transparent_gray"
>

    <include layout="@layout/toolbar_select_color" android:id="@+id/include2"/>

    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
              <!--android:text="Color"-->
              <!--android:textColor="@color/White"-->
              <!--android:textStyle="bold"-->
              <!--android:textSize="22sp"-->
              <!--android:layout_marginStart="37dp"-->
              <!--app:layout_constraintStart_toStartOf="parent"-->
              <!--android:layout_marginTop="50dp"-->
              <!--app:layout_constraintTop_toBottomOf="@+id/include2" android:id="@+id/textView2"/>-->
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_color"
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="0dp"
                android:layout_weight="7">

        </android.support.v7.widget.RecyclerView>

        <Button android:layout_width="280dp" android:layout_height="45dp"
                android:id="@+id/select_manufactor_color"
                android:background="@drawable/login_btn_style"
                android:text="OTHER COLOR"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>