<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/transparent_gray">

    <include layout="@layout/toolbar_select_color" android:id="@+id/include2"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Color"
              android:textColor="@color/White"
              android:textStyle="bold"
              android:textSize="22sp"
              android:layout_marginStart="37dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="50dp"
              app:layout_constraintTop_toBottomOf="@+id/include2" android:id="@+id/textView2"/>

    <ImageView android:layout_width="50dp" android:layout_height="50dp"

               android:background="@drawable/red_cicrle"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="36dp"
               android:layout_marginTop="28dp"
               app:layout_constraintTop_toBottomOf="@+id/textView2"
               android:id="@+id/imageView4"/>


    <ImageView android:layout_width="50dp" android:layout_height="50dp"

               android:background="@drawable/green_cicrle"
               android:layout_marginTop="28dp"
               app:layout_constraintTop_toBottomOf="@+id/textView2"
               app:layout_constraintStart_toEndOf="@+id/imageView4"
               android:layout_marginStart="14.3dp" android:id="@+id/imageView15"/>


    <ImageView android:layout_width="50dp" android:layout_height="50dp"

               android:background="@drawable/blue_circle"
               android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
               app:layout_constraintStart_toEndOf="@+id/imageView15"
               android:layout_marginStart="14.3dp" android:id="@+id/imageView16"/>


    <ImageView android:layout_width="50dp" android:layout_height="50dp"

               android:background="@drawable/yellow_circle"
               android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
               app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="14.3dp"
               android:id="@+id/imageView17"/>

    <ImageView android:layout_width="50dp" android:layout_height="50dp"

               android:background="@drawable/black_circle"
               android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
               app:layout_constraintStart_toEndOf="@+id/imageView17" android:layout_marginStart="14.3dp"/>


    <Button android:layout_width="280dp" android:layout_height="45dp"
            android:id="@+id/select_manufactor"
            android:background="@drawable/login_btn_style"
            android:text="OTHER COLOR"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"
            android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="55dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"/>

</android.support.constraint.ConstraintLayout>