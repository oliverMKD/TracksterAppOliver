<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/transparent_gray">

    <include layout="@layout/toolbar_profile" android:id="@+id/include5"/>

    <!--<LinearLayout -->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical"-->
    <!---->
    <!---->
    <!--&gt;-->
    <!---->
    <!---->
    <!--</LinearLayout>-->

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/profile_image"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/include5"/>

    <LinearLayout

            android:layout_width="209dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image">


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="NAME"
                  android:textColor="@color/White"
                  android:textStyle="bold"
                  android:textAllCaps="true"
                  android:textSize="8.3sp"
                  android:layout_marginBottom="6dp"
        />


        <EditText
                android:id="@+id/name"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:paddingLeft="10dp"
                android:background="@drawable/forma1"
        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="EMAIL"
                  android:visibility="visible"
                  android:layout_marginTop="13.7dp"
                  android:textAllCaps="true"
                  android:textColor="@color/White"
                  android:textStyle="bold"
                  android:textSize="8.3dp"
                  android:layout_marginBottom="6dp"
        />

        <EditText
                android:id="@+id/email"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:paddingLeft="10dp"
                android:background="@drawable/forma1"

        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="PHONE NUMBER"
                  android:visibility="visible"
                  android:layout_marginTop="13.7dp"
                  android:textAllCaps="true"
                  android:textColor="@color/White"
                  android:textStyle="bold"
                  android:textSize="8.3dp"
                  android:layout_marginBottom="6dp"
        />

        <EditText
                android:id="@+id/phone_number"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:paddingLeft="10dp"
                android:background="@drawable/forma1"

        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="TRAILER TYPE "
                  android:visibility="visible"
                  android:layout_marginTop="13.7dp"
                  android:textAllCaps="true"
                  android:textColor="@color/White"
                  android:textStyle="bold"
                  android:textSize="8.3dp"
                  android:layout_marginBottom="6dp"
        />

        <ListView
                android:id="@+id/trailer_type_list"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:background="@drawable/forma1"

        />


        <Button
                android:id="@+id/type_truck"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:text="TYPE OF TRUCK"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/DarkSlateGray"
                android:background="@drawable/login_btn_style"
                android:layout_marginTop="22.7dp"
        />


        <Button
                android:id="@+id/color"
                android:layout_width="209.3dp"
                android:layout_height="33.3dp"
                android:text="COLOR"
                android:textStyle="bold"
                android:textColor="@color/DarkSlateGray"
                android:background="@drawable/login_btn_style"
                android:layout_marginTop="10dp"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>