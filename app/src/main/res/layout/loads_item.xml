<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_description"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_price"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_description"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_plannedDestinationTime"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_price"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_plannedPickupTime"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_plannedDestinationTime"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_company_name"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_plannedPickupTime"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_plannedPickupAddress"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_company_name"
/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_planneddestinationAddress"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_plannedPickupAddress"
    />
    <View
            android:id="@+id/sep1"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/view_separator_gray"
            app:layout_constraintTop_toBottomOf="@+id/text_planneddestinationAddress"
            android:layout_below="@+id/text_planneddestinationAddress"
            android:layout_marginTop="8dp" />



</android.support.constraint.ConstraintLayout>